@model ShoppingCartViewModel
@{
    ViewData["Title"] = "Index";
}

<h2>Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Cart Line Id
            </th>
            <th>
                Product Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                Quantity
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingCart)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CartLineId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Product.ProductId">Edit</a> |
                
                
            <a asp-action="RemoveFromCart" method="post">
                <input type="hidden" name="ProductID" asp-for="@item.Product.ProductId" />
                <input type="hidden" name="returnUrl"
                       value="@Model.ReturnUrl" />
                    Remove from Cart
            </a>

            </td>
        </tr>
        }
    </tbody>
</table>
