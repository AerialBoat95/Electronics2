@model ShoppingCartIndexViewModel


@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.CartLineId)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingCartRepository.Lines)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CartLineId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Product.ProductId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Product.ProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Product.ProductId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
